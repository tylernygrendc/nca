doctype html
html(lang="en")
    head

        meta(http-equiv="Content-Type", content="text/html;charset=UTF-8")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")

        title #{ title } | Nygren Chiropractic and Acupuncture
        meta(name="description", content=`${ description }`)
        meta(name="keywords", content=`${ keywords }`)
        link(rel="shortcut icon", href=`../../svg/favicon.svg`, type="xml+svg")

        link(rel="stylesheet", href="../../css/fonts.css")
        link(rel="stylesheet", media="(prefers-color-scheme: light)" href="../../css/light.css")
        link(rel="stylesheet", media="(prefers-color-scheme: dark)" href="../../css/light.css")
        link(rel="stylesheet", media="screen and (max-width: 599px)", href="../../css/layout-small.css")
        link(rel="stylesheet", media="screen and (min-width: 600px) and (max-width: 1099px)", href="../../css/layout-medium.css")
        link(rel="stylesheet", media="screen and (min-width: 1100px)", href="../../css/layout-large.css")

        style.
            body * { 
                box-sizing: border-box; 
            }

    body(style="margin: 0; padding: 0;")
        
        nav: include navigation.pug

        main
            header
                #open-nav: img(src="../../svg/open-nav.svg")
                #brand-info(href="/")
                    #website-logo: img(src="../../svg/logo.svg")
                    #website-title.heading-1
                button#make-appointment
                    img(src="../../svg/appointment.svg") 
                    .body-1 Book

            article: block content

            footer: block footer

        aside

        script.
            if (window.innerWidth < 599) document.getElementById('website-title').innerText = "NCA";
            else document.getElementById('website-title').innerText = "Nygren Chiropractic & Acupuncture";
